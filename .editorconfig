root = true

[*.rs]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.json]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false
charset = utf-8
indent_style = space
indent_size = 2